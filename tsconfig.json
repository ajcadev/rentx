{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
		"esModuleInterop": true,
		"experimentalDecorators": true,  
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
    "strict": true,
    "lib": ["es2021"],
    "outDir": "dist",
    "sourceMap": true,
		"allowJs": true,
		"strictPropertyInitialization": false,
  },
  "include": [
    "src"
  ]
}